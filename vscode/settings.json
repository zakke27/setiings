{
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Nettoyer Monokai",
  "workbench.sideBar.location": "right",
  "workbench.tree.enableStickyScroll": true,
  "window.commandCenter": false,
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
    // "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": true,
  "editor.rulers": [100, 150],
  "editor.guides.bracketPairs": "active",
  "editor.minimap.renderCharacters": false,
  "editor.linkedEditing": true,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,

  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,

  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  // "typescript.inlayHints.enumMemberValues.enabled": true,
  // "typescript.inlayHints.propertyDeclarationTypes.enabled": true,

  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "editor.inlayHints.maximumLength": 25,

  "scm.countBadge": "all",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "files.associations": {
    "*.env*": "dotenv"
  },
  "reactSnippets.settings.importReactOnTop": false,
  "codeium.enableCodeLens": false,
  "workbench.startupEditor": "none",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svg.preview.mode": "svg",
  "color-highlight.matchHslWithNoFunction": true,
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.tsx": "${dirname} - page.tsx",
    "**/app/**/layout.tsx": "${dirname} - layout.tsx",
    "**/component/**/index.tsx": "${dirname} - component.tsx",

    "**/pages/**/index.tsx": "${dirname} - page.tsx",
    "**/pages/**/*.tsx": "${filename} - page.tsx"
  },
  "editor.accessibilitySupport": "off"
}
